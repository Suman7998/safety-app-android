<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for location services -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Permission to check network connectivity for WebView map -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permissions for phone calls -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Permissions for SMS -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Permissions for contacts -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Internet permission for emergency services -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Vibration permission for alerts -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Camera permission for emergency recording -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Audio recording permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- Legacy external storage write for API <=28 (Android 9 and below) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.WomenSafetyApp"
        tools:targetApi="31">

        <!-- Google Maps API Key (replace value with your real key) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDa9ahawZedqYiMnPr7d-mWeLk4R7nzqV8" />

        <activity
            android:name="com.safety.womensafetyapp.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.WomenSafetyApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.safety.womensafetyapp.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.WomenSafetyApp" />

        <activity
            android:name="com.safety.womensafetyapp.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.WomenSafetyApp" />

        <activity
            android:name="com.safety.womensafetyapp.EmergencyContactsActivity"
            android:exported="false" />

        <activity
            android:name="com.safety.womensafetyapp.SafetyTipsActivity"
            android:exported="false" />

        <activity
            android:name="com.safety.womensafetyapp.LocationSharingActivity"
            android:exported="false" />

        <activity
            android:name="com.safety.womensafetyapp.SettingsActivity"
            android:exported="false" />

        <!-- Debug data viewer activity -->
        <activity
            android:name="com.safety.womensafetyapp.data.viewer.DebugDataActivity"
            android:exported="false"
            android:label="Data Viewer" />

        <!-- Chatbot activity -->
        <activity
            android:name="com.safety.womensafetyapp.ui.chatbot.ChatbotActivity"
            android:exported="false"
            android:label="Safety Chatbot" />

        <!-- ML Insights activity -->
        <activity
            android:name="com.safety.womensafetyapp.ui.ml.MLInsightsActivity"
            android:exported="false"
            android:label="ML Insights" />

        <!-- Map activity -->
        <activity
            android:name="com.safety.womensafetyapp.ui.map.MapActivity"
            android:exported="false"
            android:label="Map" />

        <!-- Google Map activity (Google Maps SDK) -->
        <activity
            android:name="com.safety.womensafetyapp.ui.map.GoogleMapActivity"
            android:exported="false"
            android:label="Map" />

        <!-- Media capture activity -->
        <activity
            android:name="com.safety.womensafetyapp.ui.media.MediaCaptureActivity"
            android:exported="false"
            android:label="Media Capture" />

    </application>

</manifest>
